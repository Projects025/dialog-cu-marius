
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    function isAdmin() {
      let adminEmails = ["alinmflavius@gmail.com"];
      return request.auth.token.email in adminEmails;
    }

    // 1. REGULI PLATFORMĂ
    match /agents/{agentId} {
      allow read: if isOwner(agentId) || isAdmin();
      allow list: if isAdmin();
      allow write: if isOwner(agentId);
    }

    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && resource.data.agentId == request.auth.uid;
    }

    match /formTemplates/{formId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || resource.data.ownerId == null);
    }

    match /analytics/{eventId} {
      allow create: if true;
      allow read: if request.auth != null && resource.data.agentId == request.auth.uid;
    }

    // 2. REGULI STRIPE
    match /products/{id} {
      allow read: if true;
      match /prices/{priceId} { allow read: if true; }
      match /tax_rates/{id} { allow read: if true; }
    }

    match /customers/{uid} {
      allow read: if isOwner(uid);

      match /checkout_sessions/{id} {
        allow read, write: if isOwner(uid);
      }

      match /subscriptions/{id} {
        allow read: if true;
      }

      match /payments/{id} {
        allow read: if isOwner(uid);
      }
      
      match /portal_links/{id} {
        allow read, write: if isOwner(uid);
      }
    }
    
    // 3. REGULĂ SPECIALĂ (Prețuri)
    match /{path=**}/prices/{priceId} {
        allow read: if true;
    }
  }
}
