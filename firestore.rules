
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    function isAdmin() {
      // Lista de admini este acum singura sursă de adevăr pentru permisiuni.
      let adminEmails = ["alinmflavius@gmail.com", "mariusdan12@yahoo.com"];
      return request.auth.token.email in adminEmails;
    }

    // 1. REGULI PLATFORMĂ
    match /agents/{agentId} {
      // Oricine își poate crea propriul document de agent, dar doar proprietarul îl poate modifica ulterior.
      // Adminii pot citi datele oricărui agent, esențial pentru panoul de admin.
      allow create: if request.auth.uid == agentId;
      allow read, update, delete: if isOwner(agentId) || isAdmin();
      allow list: if isAdmin();
    }

    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && (resource.data.agentId == request.auth.uid || isAdmin());
    }

    match /formTemplates/{formId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.ownerId == request.auth.uid || resource.data.ownerId == null || isAdmin());
    }

    match /analytics/{eventId} {
      allow create: if true;
      allow read: if request.auth != null && (resource.data.agentId == request.auth.uid || isAdmin());
    }

    // 2. REGULI STRIPE
    match /products/{id} {
      allow read: if true;
      match /prices/{priceId} { allow read: if true; }
      match /tax_rates/{id} { allow read: if true; }
    }

    match /customers/{uid} {
      // Adminul trebuie să poată citi datele de client pentru a verifica abonamentele.
      allow read: if isOwner(uid) || isAdmin();

      match /checkout_sessions/{id} {
        allow read, write: if isOwner(uid);
      }

      match /subscriptions/{id} {
        allow read: if true;
      }

      match /payments/{id} {
        allow read: if isOwner(uid);
      }
      
      match /portal_links/{id} {
        allow read, write: if isOwner(uid);
      }
    }
    
    // 3. REGULĂ SPECIALĂ (Prețuri)
    match /{path=**}/prices/{priceId} {
        allow read: if true;
    }
  }
}
